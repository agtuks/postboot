extends ../example.pug

block example_description
  +example_description('card', 'table')

block example_body
  .table-responsive
    table.table.table-bordered.card-table.mb-0
      thead
        tr
          - for(var i = 1; i <= 3; i++)
            th= 'Head ' + i
      tbody
        - for(var r = 1; r <= 4; r++)
          tr
            - for(var i = 1; i <= 3; i++)
              td= 'Column ' + i

