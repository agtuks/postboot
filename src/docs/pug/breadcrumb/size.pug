extends ../example-responsive.pug

block example_description
  +example_description('breadcrumb', 'size')

block example_result
  - for(var size = 1; size <= 5; size++)
    +breadcrumb_variant(size)

block example_code
  :encode-pug
    | <!-- Source -->
    - for(var size = 1; size <= 5; size++)
      ol.breadcrumb(class='breadcrumb-' + size)

block responsive_description
  h2.h3.fw-400 Responsive breadcrumb sizes

block responsive_code
  :encode-pug
    | <!-- Source -->
    each breakpoint in ['sm', 'md', 'lg', 'xl']
      - for(var size = 1; size <= 5; size++)
        ol.breadcrumb(class='breadcrumb-' + breakpoint + '-' + size)
      ="\n"
