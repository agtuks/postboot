extends ../example.pug

block example_description
  +example_description('navbar', 'dropdown_menu')

block example_result
  nav.navbar.navbar-expand-xs.navbar-dark.bg-dark.px-0
    .container-fluid.navbar-container
      = "\n  "
      a.navbar-brand(href="#") Brand
      .collapse.navbar-collapse
        ul.navbar-nav
          li.nav-item.dropdown
            a.nav-link.dropdown-toggle(href='#' data-toggle='dropdown') Dropdown
            .dropdown-menu.navbar-dropdown-menu
              - for(var i = 1; i <= 3; i++)
                = "\n\t"
                a.dropdown-item(href='#')= 'Menu item ' + i

