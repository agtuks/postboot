mixin background(text, classes)
  p.p-2.mr-1.mb-2.d-inline-block(class=classes)= text

mixin background_variant(text, variant)
  +background(text, 'bg-' + variant)

mixin background_inverse(text, variant)
  +background(text, ['bg-' + variant, 'text-white'])

mixin background_hover(text, variant, color)
  +background(text, ['border', 'border-' + variant, 'bg-hover-' + variant, 'text-hover-' + color])

mixin background_state(text, variant)
  +background(text, ['bg-state-' + variant, 'text-state-' + variant])

