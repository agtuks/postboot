mixin form_control(placeholder, classes)
  input.form-control(type='text', placeholder=placeholder, class=classes)

mixin input_variant(placeholder, variant)
  +form_control(placeholder, 'input-' + variant)

mixin input_state(placeholder, variant, state)
  +form_control(placeholder, ['input-' + variant, 'is-' + state])

mixin input_dark(placeholder, variant)
  +form_control(placeholder, ['input-dark', 'input-' + variant])

mixin input_dark_state(placeholder, variant, state)
  +form_control(placeholder, ['input-dark', 'input-' + variant, 'is-' + state])
