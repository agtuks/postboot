extends ../example.pug

block example_description
  +example_description('dropdown', 'scrollable_menu')

block example_result
  .btn-group.dropdown
    button.btn.btn-secondary.dropdown-toggle(type="button" data-toggle="dropdown") Dropdown
    .dropdown-menu.dropdown-menu-scrollable
      - for(var i = 1; i <= 20; i++)
        = "\n\t"
        a.dropdown-item(href='#')= 'Menu item ' + i

