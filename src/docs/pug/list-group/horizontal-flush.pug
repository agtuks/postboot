  .d-none.d-lg-block
    +list_group(['list-group-horizontal', 'list-group-horizontal-flush', 'text-center'])
  .d-none.d-sm-block.d-lg-none
    .list-group.list-group-horizontal.list-group-horizontal-flush.text-center
      - for(var i = 1; i <= 3; i++)
        +list_group_item('List item ' + i)
