mixin background(text, classes)
  p.p-2(class=classes)= text

mixin background_variant(text, variant)
  +background(text, 'bg-' + variant)

mixin background_inverse(text, variant)
  +background(text, ['bg-' + variant, 'text-white'])

mixin background_glass(text, variant)
  +background(text, ['bg-glass-' + variant, 'text-white'])
