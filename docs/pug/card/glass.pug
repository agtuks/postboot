extends ../example.pug

block example_link
  a.text-default(href="#card-glass") Glass

block example_block
  .card-block.bg-inverse.bg-striped
    .row
      each text, variant in {'default': 'Default', 'primary': 'Primary', 'success': 'Success', 'info': 'Info', 'warning': 'Warning', 'danger': 'Danger', 'inverse': 'Inverse', 'premium': 'Premium', 'pretty': 'Pretty', 'star': 'Star'}
        .col-md-3
          +card_glass(text, variant)

block example_code
  :encode-pug
    | <!-- Source -->
    each variant in ['default', 'primary', 'success', 'info', 'warning', 'danger', 'inverse', 'premium', 'pretty', 'star']
      .card.card-inverse(class='card-glass-' + variant)
