extends example.pug

block example_title
  h1.font-weight-light
    a.text-default(href="#intro") Introduction

block example_description
  p.lead.text-muted= pkg.description
  .alert.alert-info #[strong Bootstrap] version compatibility 4.0.0-alpha.6.

block example_result
  ul.list-unstyled.mb-0
    li= pkg.name + "/"
    ul
      li css/
      ul
        li= pkg.name + ".css"
        li= pkg.name + ".min.css"
      li js/
      ul
        li= pkg.name + ".js"
        li= pkg.name + ".min.js"

block example_code
  :encode-pug
    doctype html
    html(lang="en")
      head
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
        = "\n\n\t"
        | <!-- CSS -->
        link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css")
        link(rel="stylesheet" href="https://cdn.rawgit.com/alextarkhov/" + pkg.name + "/v" + pkg.version + "/dist/css/" + pkg.name + ".min.css")
      body
        h1 PostBoot
        = "\n\n\t"
        | <!-- JS -->
        script(src="https://cdn.rawgit.com/alextarkhov/" + pkg.name + "/v" + pkg.version + "/dist/js/" + pkg.name + ".min.js")
