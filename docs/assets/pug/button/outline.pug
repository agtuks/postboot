extends ../example.pug

block example_title
  h3.font-weight-normal Outline

block example_body
  .card-body
    +button_outline('Link', 'link')
    each text, variant in extraColors
      if variant != 'black' && variant != 'white'
        +button_outline(text, variant)
  .card-body.bg-dark.bg-striped
    +button_outline('White', 'white')

block example_code
  :encode-pug
    | <!-- Source -->
    button.btn.btn-outline-link(type='button') Link
    each text, variant in extraColors
      if variant != 'black'
        button.btn(type='button' class='btn-outline-' + variant)= text
