extends ../example.pug

block example_title
  h3.font-weight-normal Custom

block example_body
  .card-body
    each text, variant in extraColors
      if variant != 'black' && variant != 'white'
        +button_variant(text, variant)
  .card-body.bg-dark.bg-striped
    +button_variant('White', 'white')

block example_code
  :encode-pug
    | <!-- Source -->
    each text, variant in extraColors
      if variant != 'black'
        button.btn(type='button' class='btn-' + variant)= text
