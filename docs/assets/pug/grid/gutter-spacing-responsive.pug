extends ../example-html.pug

block example_title
  h4.fw-400 Gutter spacing responsive

block example_code
  :encode-pug
    | <!-- Source -->
    each breakpoint in ['sm', 'md', 'lg', 'xl']
      div(class='m-' + breakpoint + '-gutter')
      div(class='mx-' + breakpoint + '-gutter')
      div(class='my-' + breakpoint + '-gutter')
      div(class='mt-' + breakpoint + '-gutter')
      div(class='mr-' + breakpoint + '-gutter')
      div(class='mb-' + breakpoint + '-gutter')
      div(class='ml-' + breakpoint + '-gutter')
      ="\n"
      div(class='p-' + breakpoint + '-gutter')
      div(class='px-' + breakpoint + '-gutter')
      div(class='py-' + breakpoint + '-gutter')
      div(class='pt-' + breakpoint + '-gutter')
      div(class='pr-' + breakpoint + '-gutter')
      div(class='pb-' + breakpoint + '-gutter')
      div(class='pl-' + breakpoint + '-gutter')
      ="\n"
      - for(var size = 1; size <= 3; size++)
        div(class='m-' + breakpoint + '-gutter-' + size)
        div(class='mx-' + breakpoint + '-gutter-' + size)
        div(class='my-' + breakpoint + '-gutter-' + size)
        div(class='mt-' + breakpoint + '-gutter-' + size)
        div(class='mr-' + breakpoint + '-gutter-' + size)
        div(class='mb-' + breakpoint + '-gutter-' + size)
        div(class='ml-' + breakpoint + '-gutter-' + size)
        ="\n"
        div(class='p-' + breakpoint + '-gutter-' + size)
        div(class='px-' + breakpoint + '-gutter-' + size)
        div(class='py-' + breakpoint + '-gutter-' + size)
        div(class='pt-' + breakpoint + '-gutter-' + size)
        div(class='pr-' + breakpoint + '-gutter-' + size)
        div(class='pb-' + breakpoint + '-gutter-' + size)
        div(class='pl-' + breakpoint + '-gutter-' + size)
        ="\n"
