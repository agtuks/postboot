mixin background(text, classes)
  p.p-2(class=classes)= text

mixin background_variant(text, variant)
  +background(text, 'bg-' + variant)

mixin background_inverse(text, variant)
  +background(text, ['bg-' + variant, 'text-white'])

mixin background_hover(text, variant)
  p.border-solid.border-1.p-2(class=['border-' + variant, 'bg-hover-' + variant])= text

mixin background_gradient(text, variant)
  +background(text, ['bg-gradient-' + variant, 'text-white'])

mixin background_alpha(text, variant)
  +background(text, ['bg-' + variant + '-50', 'text-white'])
