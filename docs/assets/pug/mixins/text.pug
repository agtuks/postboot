mixin text(text, classes)
  span.mr-2.mb-2(class=classes)= text

mixin text_variant(text, variant)
  +text(text, 'text-' + variant)

mixin text_alpha(text, variant)
  +text_variant(text, variant + '-50')

mixin text_hover(text, variant)
  +text_variant(text, 'hover-' + variant)

mixin text_ribbon(text, variant)
  span.d-inline-block.mr-2.mb-2(class='text-ribbon-' + variant)= text
