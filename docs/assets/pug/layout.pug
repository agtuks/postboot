                    span.d-none.d-md-inline!= "&nbsp;&nbsp;GitHub"
              a.btn.btn-primary.btn-sm.ml-2(href=downloadUrl) Download

    block content
      .container-fluid.container-xl
        .row
          .col-md-2
            aside#sidebar-left.contents-nav.sidebar.sidebar-light.sidebar-expand-md.py-0.position-fixed(role="complementary")
              block sidebar
          main.col-md-10(role="main")
            article(role="article")
              block main

    block footer
      footer.pt-gutter.d-block.d-md-none(role="contentinfo")
        nav.contents-nav.navbar.navbar-2.navbar-expand-xs.navbar-light.px-sm-0.fixed-bottom.border-top.bg-white(role="navigation")
          .container-fluid
            .navbar-scroller
              ul.navbar-nav.navbar-nav-left.navbar-scroller-nav
                each category in contents
                  li.nav-item
                    a.nav-link(href=category.url)= category.name
                    if category.childs
                      ul.d-none
                        each article in category.childs
                          li.nav-item
                            a.nav-link(href=article.url)= article.name
                            if article.childs
                              ul.d-none
                                each subarticle in article.childs
                                  li.nav-item
                                    a.nav-link(href=subarticle.url)= subarticle.name

    script(src="/" + pkg.name + "/assets/js/app.min.js")
