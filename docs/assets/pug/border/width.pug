extends ../example.pug

block example_title
  h3.font-weight-normal Widths

block example_result
  - for(var width = 1; width <= 3; width++)
    +border_width(width)

block example_code
  :encode-pug
    | <!-- Source -->
    - for(var width = 1; width <= 3; width++)
      p(class='border-' + width)= width + 'px'
      p(class='border-top-' + width)= width + 'px'
      p(class='border-right-' + width)= width + 'px'
      p(class='border-bottom-' + width)= width + 'px'
      p(class='border-left-' + width)= width + 'px'
      = "\n"
