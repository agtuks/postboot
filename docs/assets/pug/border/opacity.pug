extends ../example.pug

block example_title
  h3.fw-400 Opacity

block example_body
  .card-body.bg-dark.bg-striped
    each text, variant in colors
      +border_alpha(text, variant + '-50')

block example_code
  :encode-pug
    | <!-- Source -->
    each text, variant in colors
      - for(var i = 1; i <= 9; i++)
        div(class='border-' + variant + '-' + i * 10)
      = "\n"
