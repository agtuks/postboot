extends ../example-html.pug

block example_title
  h4.font-weight-normal Responsive image position

block example_code
  :encode-pug
    | <!-- Source -->
    each breakpoint in ['sm', 'md', 'lg', 'xl']
      each horizontal in ['right', 'left']
        ="\n"
        img(class="card-img-" + breakpoint + "-" + horizontal src="assets/img/example.jpg")
        each vertical in ['top', 'bottom']
          ="\n"
          img(class="card-img-" + breakpoint + "-" + vertical + "-" + horizontal src="assets/img/example.jpg")
      ="\n"
