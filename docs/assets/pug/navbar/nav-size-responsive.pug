extends ../example-html.pug

block example_title
  h4.fw-400 Responsive navbar nav sizes
  span.badge.badge-success.text-uppercase.mb-3 New

block example_code
  :encode-pug
    | <!-- Source -->
    each breakpoint in ['sm', 'md', 'lg', 'xl']
      - for(var size = 0; size <= 5; size++)
        if size > 0
          ul.navbar-nav(class='navbar-nav-' + breakpoint + '-' + size)
        ul.navbar-nav(class='navbar-nav-y-' + breakpoint + '-' + size)
        ul.navbar-nav(class='navbar-nav-x-' + breakpoint + '-' + size)
        ="\n"
      ="\n"
