extends ../example.pug

block example_title
  h3.font-weight-normal Radio

block example_result
  .list-group
    a.area.list-group-item.list-group-item-action.active(href="#" data-toggle="radio-area" checked-area) Active
    - for(var i = 1; i <= 5; i++)
      a.area.list-group-item.list-group-item-action(href="#" data-toggle="radio-area")= "Radio area " + i

block example_code
  :encode-pug
    | <!-- Source -->
    .list-group
      = "\n\t"
      a.area.list-group-item.list-group-item-action.active(href="#" data-toggle="radio-area") Active
      - for(var i = 1; i <= 5; i++)
        = "\n\t"
        a.area.list-group-item.list-group-item-action(href="#" data-toggle="radio-area")= "Radio area " + i
