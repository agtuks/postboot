extends ../example.pug

block example_title
  h1.font-weight-normal Ribbon

block example_result
  each text, variant in colors
    if variant != 'white'
      +text_ribbon(text, variant)

block example_inverse
  .card-body.bg-dark.bg-striped
    +text_ribbon('White', 'white')

block example_code
  :encode-pug
    | <!-- Source -->
    each text, variant in colors
      = "\n"
      span(class='text-ribbon-' + variant)= text

