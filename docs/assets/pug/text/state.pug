extends ../example.pug

block example_title
  h3.fw-400 State
  span.badge.badge-success.text-uppercase.mb-3 New

block example_result
  each text, variant in colors
    if variant != "black" && variant != "white"
      +text_state(text, variant)

block example_code
  :encode-pug
    | <!-- Source -->
    each text, variant in colors
      if variant != "black" && variant != "white"
        div(class='text-state-' + variant)= text
